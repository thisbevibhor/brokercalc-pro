generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum TradeType {
  BUY
  SELL
}

model User {
  id             String           @id @default(uuid())
  email          String           @unique
  passwordHash   String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  brokerAccounts BrokerAccount[]
  orders         Order[]
  calculations   Calculation[]

  @@index([email])
}

model BrokerAccount {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  brokerName  String
  apiKey      String
  apiSecret   String   @default("")
  encryptedApiSecret String?  // For storing encrypted secrets
  connectedAt DateTime @default(now())
  orders      Order[]

  @@index([userId])
}

model Order {
  id           String         @id @default(uuid())
  user         User           @relation(fields: [userId], references: [id])
  userId       String
  broker       BrokerAccount  @relation(fields: [brokerId], references: [id])
  brokerId     String
  type         String         // Stock symbol
  qty          Float
  price        Float
  tradeType    TradeType
  isIntraday   Boolean       @default(false)
  date         DateTime      @default(now())
  calculations Calculation[]

  @@index([userId])
  @@index([brokerId])
  @@index([date])
}

model Calculation {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  orders      Order[]  
  buyTotal    Float
  sellTotal   Float
  buyCharges  Float
  sellCharges Float
  grossPL     Float
  netPL       Float
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}
